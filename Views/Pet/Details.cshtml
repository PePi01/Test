@model Test.Models.Pet

@{
    ViewData["Title"] = "Details";
    string jabs = "";
    string ident = "";
}
<h1>Details</h1>

<div>
    <hr />
    <dl class="row">
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Animal)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Animal)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Customer.Id)
        </dd>
        <dt class = "col-sm-2">
            Owner name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Customer.FullName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Jabs)
        </dt>
   @foreach (var item in Model.Jabs)
   {

       jabs += item.Type + " ID: " + item.Id;
       ident = Model.Id.ToString() + item.Id;
        <dd class = "col-sm-2">
                @jabs | <a asp-action="Remove" asp-route-id="@ident">Remove</a>
        </dd>
       jabs = string.Empty;
   }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
