@model Test.Models.Customer

@{
    ViewData["Title"] = "Details";
    string pets = "";
}

<h1>Details</h1>

<div>
    <h4>Customer</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Pets)
        </dt>
        @foreach (var item in Model.Pets)
        {
            pets += "ID "+item.Id + ": " + item.Animal + ", " + item.Name;
            <dd class="col-sm-10">
                @pets
            </dd>
            pets = string.Empty;
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
